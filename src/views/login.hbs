<div class="login-box">
    <img class="avatar" src="assets/img/upq.jpg" alt="Logo" title="Universidad politecnica de Queretaro">
    <h1>Ingresar</h1>
    <form action="/users/login" method="POST">
        {{!-- User name --}}
        <label for="username">Usuario</label>
        <input type="text" name="username" placeholder="Nombre de usuario">

        {{!-- Password --}}
        <label for="password">Contraseña</label>
        <input type="password" name="password" placeholder="Ingresar contraseña">


        <input type="submit" value="Ingresar">

        <a href="#">¿Has olvidado tu contraseña?</a>
        <a href="/singup">¿No tienes cuenta? Registrarse</a>
    </form>
</div>

